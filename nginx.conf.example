worker_processes  1;

events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
    
    # Increase max upload size if needed
    client_max_body_size 100M;

    server {
        listen 80;
        server_name _;

        root "C:/Users/Admin/Desktop/nginx/html";
        index index.html;

        # Frontend
        location / {
            try_files $uri $uri/ /index.html;
        }

        # Backend API
        # IMPORTANT: No trailing slash on proxy_pass to preserve /api prefix
        location /api/ {
            proxy_pass http://127.0.0.1:8000;
            
            # Standard Headers
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            # WebSocket Support (Required for socket connection)
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }
        
        # Files/Uploads (If they are served separately or via API)
        # Assuming they are served via /api/files or similar, the above block covers it.
        # If static files are served directly by Nginx from backend folder:
        # location /static/ {
        #     alias C:/Path/To/Backend/static/;
        # }
    }
}
