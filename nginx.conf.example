worker_processes  1;

events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
    
    # Increase max upload size if needed
    client_max_body_size 100M;

    # HTTP Server (Redirect to HTTPS)
    server {
        listen 80;
        server_name statka-rb.ru www.statka-rb.ru;
        return 301 https://$host$request_uri;
    }

    # HTTPS Server (Secure)
    server {
        listen 443 ssl http2;
        server_name statka-rb.ru www.statka-rb.ru;

        # SSL Configuration
        # 1. Combine "Certificate" + "Root Certificate" into one file named 'fullchain.pem'
        # 2. Rename "Private Key" to 'private.key'
        # 3. Upload them to the folder below:
        ssl_certificate "C:/Users/Admin/Desktop/nginx/ssl/fullchain.pem";
        ssl_certificate_key "C:/Users/Admin/Desktop/nginx/ssl/private.key";

        ssl_session_cache shared:SSL:1m;
        ssl_session_timeout 10m;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers HIGH:!aNULL:!MD5;

        # Path to your built React app (e.g. /var/www/samor/dist)
        root "C:/Users/Admin/Desktop/nginx/html"; 
        index index.html;

        # Frontend
        location / {
            try_files $uri $uri/ /index.html;
        }

        # Backend API
        # IMPORTANT: No trailing slash on proxy_pass to preserve /api prefix
        location /api/ {
            proxy_pass http://127.0.0.1:8000;
            
            # Standard Headers
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            # WebSocket Support (Required for socket connection)
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }
    }
}
